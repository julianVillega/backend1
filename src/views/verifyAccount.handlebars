<div class="register d-flex flex-column align-items-center my-5">
  <h2>Verify your account</h2>
  <form id="verify-form" class="w-25">
    <div class="mb-3">
      <label for="verificationCode" class="form-label">Verification Code</label>
      <input
        type="text"
        class="form-control"
        id="verificationCode"
        placeholder=""
        required
      />
    </div>
    <div class="d-flex">
      <button id="btn-verify" type="submit" class="btn btn-primary ms-auto" data-user-id={{id}}>Verify</button>
    </div>
  </form>
  <script src="/public/js/verify.js"></script>
</div>